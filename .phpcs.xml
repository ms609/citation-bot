<?xml version="1.0"?>
<ruleset name="CustomIndentationStandard">
    <file>authenticate.php</file>
    <file>big_jobs.php</file>
    <file>category.php</file>
    <file>Comment.php</file>
    <file>constants.php</file>
    <file>env.php.example</file>
    <file>expandFns.php</file>
    <file>gadgetapi.php</file>
    <file>generate_template.php</file>
    <file>gitpull.php</file>
    <file>kill_big_job.php</file>
    <file>linked_pages.php</file>
    <file>NameTools.php</file>
    <file>Page.php</file>
    <file>Parameter.php</file>
    <file>process_page.php</file>
    <file>setup.php</file>
    <file>Template.php</file>
    <file>user_messages.php</file>
    <file>WikipediaBot.php</file>
    <file>./includes</file>
    <file>./tests</file>
    <rule ref="Generic.WhiteSpace.ScopeIndent"/>
    <rule ref="Generic.WhiteSpace.DisallowTabIndent"/>
    <rule ref="PSR2.ControlStructures.SwitchDeclaration.BreakIndent"/>
    <rule ref="Generic.PHP.ForbiddenFunctions">
        <properties>
            <property name="forbiddenFunctions" type="array">
                <element value="eval" value="null"/>
                <element value="exec" value="null"/>
                <element value="shell_exec" value="null"/>
                <element value="passthru" value="null"/>
                <element value="system" value="null"/>
                <element value="popen" value="null"/>
                <element value="proc_open" value="null"/>
                <element value="create_function" value="null"/>
                <element value="assert" value="null"/>
                <element value="convert_case" value="mb_convert_case"/>
                <element value="ereg" value="mb_ereg"/>
                <element value="ereg_replace" value="mb_ereg_replace"/>
                <element value="ltrim" value="mb_ltrim"/>
                <element value="rtrim" value="mb_rtrim"/>
                <element value="str_pad" value="mb_str_pad"/>
                <element value="str_split" value="mb_str_split"/>
                <element value="stripos" value="mb_stripos"/>
                <element value="strlen" value="mb_strlen"/>
                <element value="strpos" value="mb_strpos"/>
                <element value="strrev" value="mb_strrev"/>
                <element value="strrpos" value="mb_strrpos"/>
                <element value="strtolower" value="mb_strtolower"/>
                <element value="strtoupper" value="mb_strtoupper"/>
                <element value="substr" value="mb_substr"/>
                <element value="trim" value="mb_trim"/>
                <element value="die" value="exit"/>
                <element value="print" value="echo"/>
                <element value="ucfirst" value="mb_ucfirst"/>
                <element value="ucwords" value="mb_ucwords"/>
            </property>
        </properties>
    </rule>

</ruleset>
