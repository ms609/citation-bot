<?xml version="1.0"?>
<ruleset name="CustomIndentationStandard">
    <file>authenticate.php</file>
    <file>big_jobs.php</file>
    <file>category.php</file>
    <file>Comment.php</file>
    <file>constants.php</file>
    <file>env.php.example</file>
    <file>expandFns.php</file>
    <file>gadgetapi.php</file>
    <file>generate_template.php</file>
    <file>gitpull.php</file>
    <file>kill_big_job.php</file>
    <file>linked_pages.php</file>
    <file>NameTools.php</file>
    <file>Page.php</file>
    <file>Parameter.php</file>
    <file>process_page.php</file>
    <file>setup.php</file>
    <file>Template.php</file>
    <file>user_messages.php</file>
    <file>WikipediaBot.php</file>
    <file>./includes</file>
    <file>./tests</file>
    <rule ref="Generic.WhiteSpace.ScopeIndent"/>
    <rule ref="Generic.WhiteSpace.DisallowTabIndent"/>
    <rule ref="PSR2.ControlStructures.SwitchDeclaration.BreakIndent"/>
    <rule ref="Generic.PHP.ForbiddenFunctions">
        <properties>
            <property name="forbiddenFunctions" type="array">
                <!-- unsafe functions -->
                <element value="eval" />
                <element value="exec" />
                <element value="shell_exec" />
                <element value="passthru" />
                <element value="system" />
                <element value="popen" />
                <element value="proc_open" />
                <element value="create_function" />
                <element value="assert" />
                <!-- non-multi-byte functions -->
                <element value="convert_case" />
                <element value="ereg" />
                <element value="ereg_replace" />
                <element value="ltrim" />
                <element value="rtrim" />
                <element value="str_pad" />
                <element value="str_split" />
                <element value="stripos" />
                <element value="strlen" />
                <element value="strpos" />
                <element value="strrev" />
                <element value="strrpos" />
                <element value="strtolower" />
                <element value="strtoupper" />
                <element value="substr" />
                <element value="trim" />
                <element value="ucfirst" />
                <element value="ucwords" />
            </property>
        </properties>
    </rule>

</ruleset>
