<?xml version="1.0" encoding="UTF-8"?>
<phpunit stopOnError="false" >
  <testsuites>
    <testsuite name="TestSuite">
      <directory suffix=".php">./tests/phpunit</directory>
    </testsuite>
  </testsuites>
  <coverage>
    <include>
      <directory suffix=".php">.</directory>
    </include>
    <exclude>
      <directory>./constants</directory>
      <directory>./tests</directory>
      <directory>./vendor</directory>
      <file>./constants.php</file>
      <file>./process_page.php</file>
      <file>./gitpull.php</file>
      <file>./category.php</file>
      <file>./linked_pages.php</file>
      <file>./authenticate.php</file>
      <file>./setup.php</file>
      <file>./kill_big_job.php</file>
      <file>./big_jobs.php</file>
    </exclude>
    <report>
      <clover outputFile="coverage.xml"/>
    </report>
  </coverage>
  <logging/>
</phpunit>
