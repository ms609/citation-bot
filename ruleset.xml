<?xml version="1.0"?>
<ruleset name="My Custom Ruleset"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0 http://pmd.sf.net/ruleset_xml_schema.xsd">
    <description>
        This is a custom ruleset for my project.
    </description>

    <!-- Include the entire UnusedCode ruleset -->
    <rule ref="rulesets/unusedcode.xml"/>

    <!-- Reference a specific rule from the CodeSize ruleset and customize it -->
    <rule ref="rulesets/codesize.xml/CyclomaticComplexity">
        <properties>
            <property name="reportLevel" value="1"/>
            <property name="threshold" value="5"/>
        </properties>
    </rule>

    <!-- Add a custom rule (if you have one) -->
    <!-- <rule ref="path/to/my/custom/Rule.php" /> -->
</ruleset>
